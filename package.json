{
  "name": "cooler",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist && rimraf dist.zip && rimraf build-analysis.html",
    "zip": "cd dist && 7z a ../dist.zip -mx9 && cd .. && advzip --recompress --shrink-extra dist.zip",
    "dist": "pnpm build && pnpm zip",
    "dev": "vite --port=3000",
    "devc": "concurrently \"pnpm content\" \"pnpm dev\"",
    "content": "node content.js",
    "lint": "tsc --noEmit --watch",
    "build": "pnpm clean && tsc && vite build && vite-bundle-visualizer && roadroller ./dist/assets/index.min.js -o ./dist/assets/index.min.js",
    "preview": "vite build && vite preview --port=3000"
  },
  "devDependencies": {
    "advpng-bin": "^7.0.0",
    "advzip-bin": "^2.0.0",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "imagemin": "^9.0.0",
    "imagemin-advpng": "^6.0.0",
    "jspngopt": "^0.2.0",
    "rimraf": "^6.0.1",
    "roadroller": "^2.1.0",
    "rollup-plugin-sizes": "^1.0.6",
    "terser": "^5.31.3",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-imagemin": "^0.6.1"
  }
}
